<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:orientation="vertical">
    <LinearLayout
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="250dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/cup"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp" />
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Water"
                android:textSize="25sp"
                android:textColor="#234"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp" />
            <com.github.lzyzsd.circleprogress.DonutProgress
                android:layout_marginLeft="80dp"
                android:layout_marginTop="15dp"
                android:id="@+id/water_progress"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                />
        </LinearLayout>
        <Button
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/AddWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f9031f"
            android:text="Add a Glass of Water"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/waterGlasses"
            android:textColor="#f9031f"
            android:text="You Drank 0 Glasses of Water Today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>